#----------------------------------------------------------------------------------------------------
# Nginx Configuration
#----------------------------------------------------------------------------------------------------

server 
{
	listen 80 default_server;

	root /var/www/html;

	error_page 403 /index.php;

	location / 
	{
		try_files $uri /index.php?$args;
		proxy_pass http://127.0.0.1:80;
	}

	location ~ index.php$ 
	{
		include snippets/fastcgi-php.conf;
		fastcgi_pass unix:/var/run/php/php7.0-fpm.sock;
	}
}

#----------------------------------------------------------------------------------------------------
